{
	"name": "PostureCheck",
	"description": "Create friendly reminders to save your back",
	"version": "1.0",
	"manifest_version": 2,
	"browser_action": {
		"default_popup": "/public/popup.html",
		"default_icon": {
			"16": "/images/clock.png",
			"32": "/images/clock.png",
			"48": "/images/clock.png",
			"128": "/images/clock.png"
		}
	},
	"icons": {
		"16": "/images/clock.png",
		"32": "/images/clock.png",
		"48": "/images/clock.png",
		"128": "/images/clock.png"
	},
	"background": {
		"scripts": ["/js/background.js"]
	},
	"permissions": ["storage", "notifications", "alarms", "idle"]
}
